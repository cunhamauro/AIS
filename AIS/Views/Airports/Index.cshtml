@model IEnumerable<AIS.Data.Entities.Airport>

@{
    ViewData["Title"] = "Airports";
}

<div style="display: flex; justify-content: space-between; align-items: center; width: 100%; padding: 0 1rem; margin-bottom: 4vh; margin-top: 3.5vh">
    <!-- Button on the left -->
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa-solid fa-location-dot mr-2"></i>New
    </a>

    <!-- Heading centered -->
    <h2 class="title-text" style="flex: 1; text-align: center; font-weight: bolder; margin: 0; padding-right: 10vh">
        List of Airports
    </h2>
</div>

@if (!Model.Any())
{
    <hr />
    <h4 class="no-items-list">There are no Airports!</h4>
}
else
{
        <div class="card">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.IATA)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.City)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Country)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ImageUrl)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IATA)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.City)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Country)
                            </td>
                            <td>
                                <img src="@Url.Content(item.ImageUrl)" alt="Country Flag Image" style="width:20%; border:solid; border-color: lightgray; border-width: 0.5px" />
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info mr-2 mb-2"><i class="fa-solid fa-list mr-2"></i>Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mb-2"><i class="fa-solid fa-trash-can mr-2"></i>Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
}